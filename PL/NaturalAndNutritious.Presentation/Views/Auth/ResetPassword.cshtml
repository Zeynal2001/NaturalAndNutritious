@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@ViewData["title"]</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-action="Login">@Context.Request.Path.ToString().Replace("/Auth/ResetPassword", "Auth")</a></li>
        <li class="breadcrumb-item"><a asp-action="Login">@Context.Request.Path.ToString().Replace("/Auth/ResetPassword", "ResetPassword")</a></li>
        @* <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Shop</li> *@
    </ol>
</div>


<div class="d-flex justify-content-center m-3">
    <h4>Reset Your Password</h4>
</div>
<hr />
<div class="container">
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="Token" />
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">New Password</label>
            <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Confirm Password</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center m-2">
            <button type="submit" class="btn btn-primary" style="color:honeydew">Reset Password</button>
        </div>
    </form>
</div>