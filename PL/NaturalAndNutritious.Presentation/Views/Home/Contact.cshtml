@model MessageDto
@{
    var errorCount = (int?)ViewData["hasError"];
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Contact</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-action="Login">@Context.Request.Path.ToString().Replace("/Home/Contact", "Home")</a></li>
        <li class="breadcrumb-item"><a asp-action="Login">@Context.Request.Path.ToString().Replace("/Home/Contact", "Contact")</a></li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Get in touch</h1>
                        <p class="mb-4">Natural & Nutritious: Your Destination for Organic Delights 🌱🍇🍅🥖🥩 Natural & Nutritious is an e-commerce web application developed using ASP.NET Core MVC, dedicated to providing users with the freshest and most nutritious selection. <a href=mailto:nutritious@gmail.com>nutritious@gmail.com</a>.</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1528.7565718914264!2d49.85340955805399!3d40.40919616875886!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40308ec70a1655ff%3A0xddb8cbb79dc7af94!2sBaku%2C%20Azerbaijan!5e0!3m2!1sen!2sus!4v1646433345798!5m2!1sen!2sus"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                @if (errorCount > 0)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }
                @if (ViewData["successMsg"] != null)
                {
                    <div class="alert alert-success">@ViewData["successMsg"]</div>
                }
                <div class="col-lg-7">
                    <form method="post" asp-action="AddMessage">
                        <input asp-for="CustomerName" type="text" class="w-100 form-control border-0 py-3 mb-4" placeholder="Your Name" required>
                        <input asp-for="CustomerEmailAddress" type="email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Enter Your Email" required>
                        <textarea asp-for="CustomerMessage" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Your Message" required></textarea>
                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Submit</button>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Address</h4>
                            <p class="mb-2"> 123 Street, Baku. Azerbaijan</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Mail Us</h4>
                            <p class="mb-2">nutritious@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Telephone</h4>
                            <p class="mb-2">(+012) 3456 7890</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->