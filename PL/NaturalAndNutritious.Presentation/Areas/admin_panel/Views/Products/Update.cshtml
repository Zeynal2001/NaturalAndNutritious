@model UpdateProductDto
@{
    ViewData["Title"] = "Edit";
}
<div class="">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div asp-validation-summary="All"></div>
            <h4 class="card-title">Update Product Details</h4>
            <div class="">
                <div class="container mb-4">
                    <img src="~/@Model.ProductImageUrl" id="profile-image-show" width="200" height="200" />
                </div>
                <div class="container">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="ProductImage" class="form-label">Product Image:</label>
                            <input asp-for="ProductImage" class="form-control" type="file" id="formFile">
                        </div>

                        <div class="form-group">
                            <label asp-for="ProductName" for="exampleInputNickName2">Product Name:</label>
                            <input asp-for="ProductName" type="text" class="form-control" id="exampleInputNickName2" placeholder="@Model.ProductName">
                        </div>

                        <div class="form-group">
                            <label asp-for="ShortDescription" for="exampleInputUsername3">Short Description:</label>
                            <input asp-for="ShortDescription" type="text" class="form-control" id="exampleInputUsername3" placeholder="@Model.ShortDescription">
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" for="exampleInputUsername4">Description:</label>
                            <textarea asp-for="Description" class="form-control" id="exampleInputUsername4" placeholder="@Model.Description"></textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProductPrice"></label>
                            <input asp-for="ProductPrice" class="form-control" placeholder="@Model.ProductPrice" />
                        </div>

                        <div class="form-group">
                            <label asp-for="UnitsInStock" for="exampleInputEmail1">Units In Stock:</label>
                            <input asp-for="UnitsInStock" type="number" class="form-control" id="exampleInputEmail1" placeholder="@Model.UnitsInStock">
                        </div>

                        <div class="form-group">
                            <label asp-for="UnitsOnOrder" for="exampleInputEmail2">Units On Order:</label>
                            <input asp-for="UnitsOnOrder" type="number" class="form-control" id="exampleInputEmail2" placeholder="@Model.UnitsOnOrder">
                        </div>

                        <div class="form-group">
                            <label asp-for="ReorderLevel" for="exampleInputEmail3">Reorder Level:</label>
                            <input asp-for="ReorderLevel" type="number" class="form-control" id="exampleInputEmail3" placeholder="@Model.ReorderLevel">
                        </div>

                        <div class="form-group">
                            <input asp-for="Id" type="text" class="form-control" id="exampleInputEmail1" hidden>
                            <input asp-for="ProductImageUrl" type="text" class="form-control" hidden>
                        </div>

                        <button type="submit" class="btn btn-primary me-2" style="color:honeydew;">Submit</button>
                        <button asp-action="GetAllProducts" asp-controller="Products" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

