                            <input asp-for="RecipientName" type="text" class="form-control" id="exampleInputNickName2" placeholder="@Model.RecipientName">
                        </div>

                        <div class="form-group">
                            <label asp-for="RecipientLName" for="exampleInputUsername3">Recipient Last Name:</label>
