                        <div class="form-group">
                            <label asp-for="MobileNumber" for="exampleInputUsername4">Mobile Number:</label>
                            <input asp-for="MobileNumber" type="tel" class="form-control" id="exampleInputUsername4" placeholder="@Model.MobileNumber">
                        </div>

                        <div class="form-group">
                            <label asp-for="ShipAddress" for="exampleInputNickName5">Ship Address:</label>
                            <input asp-for="ShipAddress" type="text" class="form-control" id="exampleInputNickName5" placeholder="@Model.RecipientName">
                        </div>

                        <div class="form-group">
                            <label asp-for="ShipCity" for="exampleInputNickName6">Ship City:</label>
                            <input asp-for="ShipCity" type="text" class="form-control" id="exampleInputNickName6" placeholder="@Model.ShipCity">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ShipCountry" for="exampleInputNickName11">Ship Country:</label>
                            <input asp-for="ShipCountry" type="text" class="form-control" id="exampleInputNickName11" placeholder="@Model.ShipCountry">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ShipRegion" for="exampleInputNickName7">Ship Region:</label>
                            <input asp-for="ShipRegion" type="text" class="form-control" id="exampleInputNickName7" placeholder="@Model.ShipRegion">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ShipPostalCode" for="exampleInputNickName8">Ship Postal Code:</label>
                            <input asp-for="ShipPostalCode" type="text" class="form-control" id="exampleInputNickName8" placeholder="@Model.ShipPostalCode">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ShippedDate" for="exampleInputNickName9">Shipped Date:</label>
                            <input asp-for="ShippedDate" type="date" class="form-control" id="exampleInputNickName9" placeholder="@Model.ShippedDate">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="RequiredDate" for="exampleInputNickName10">Required Date:</label>
                            <input asp-for="RequiredDate" type="date" class="form-control" id="exampleInputNickName10" placeholder="@Model.RequiredDate">
                        </div>

