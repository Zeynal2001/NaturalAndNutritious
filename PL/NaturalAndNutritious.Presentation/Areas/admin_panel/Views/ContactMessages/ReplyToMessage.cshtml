@model ReplyModel
@{
    var errrorCount = (int?)ViewData["hassErrors"];
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-title text-center py-2" style="text-transform:initial">
                <h2>Reply</h2>
            </div>
            <div class="card-body">
                @if (errrorCount > 0 || errrorCount != null)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }
                <div class="d-flex justify-content-center align-items-center">
                    <form method="post" asp-action="ReplyToMessage">
                        <div class="form-group">
                            <label asp-for="Recipient"></label>
                            <span asp-validation-for="Recipient"></span>
                            <input asp-for="Recipient" type="email" class="form-control" id="exampleInputPassword1">
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject"></label>
                            <span asp-validation-for="Subject"></span>
                            <input asp-for="Subject" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Message"></label>
                            <span asp-validation-for="Message"></span>
                            <textarea asp-for="Message" class="form-control" cols="50" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <input asp-for="@Model.Id" type="text" class="form-control" hidden value="@Model.Id">
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary" style="color:honeydew">Send Email</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>