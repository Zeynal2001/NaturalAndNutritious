@model CreateShipperDto

@{
    ViewData["Title"] = "Create Shipper";
}
<div class="">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div asp-validation-summary="All"></div>
            <h4 class="card-title">Create Shipper</h4>
            <div class="">
                <div class="container">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label asp-for="CompanyName" for="exampleInputTitle2">Company Name:</label>
                            <input asp-for="CompanyName" type="text" class="form-control" id="exampleInputTitle2">
                        </div> 
                        
                        <div class="form-group">
                            <label asp-for="PhoneNumber" for="exampleInputTitle3">Phone Number:</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" id="exampleInputTitle3">
                        </div>

                        <button type="submit" class="btn btn-primary me-2" style="color:honeydew;">Create</button>
                        <button asp-action="GetAllShippers" asp-controller="Shippers" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>